<br><br>
<%= form_with model: @post do |f| %>
    <div><strong>Title: </strong><%= f.text_field :title %></div>
    <div><strong>Desc: </strong><%= f.text_field :description %></div>
    <%= f.hidden_field :user_id, value: current_user.id, class:'d-none'%>
    <div>
      <%= f.label :status %><br>
      <%= f.select :status, ['public', 'private', 'Friends'], selected: 'public' %>
    </div><br>
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
<% end %>
