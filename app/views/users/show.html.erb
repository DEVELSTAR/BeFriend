<div class="users-show">
	<div class="users-show-details">
		<div><strong>Name: </strong><%= @user.name ? @user.name : 'unavailable' %></div>
		<div><strong>Bio: </strong><%= @user.bio ? @user.bio : 'unavailable' %></div>
		<div><strong>Phone: </strong><%= @user.phone ? @user.phone : 'unavailable' %></div>
		<div><strong>Total posts: </strong><%= @user.posts.count %></div>
		
		<div>
			<strong>Followers: </strong>
			<%= link_to @user.followers.count, home_followers_path %>
		</div>

		<div>
			<strong>Followees: </strong>
			<%= link_to @user.followees.count, home_followees_path %>
		</div>

		<div><strong>Email: </strong><%= @user.email ? @user.email : 'unavailable' %></div>
		<div class="users-show-edits">
			<% if @user == current_user %>
			  <%= link_to "Edit profile", edit_user_path, class: "users-show-edit"  %>
			<% end %>	
		</div>
    </div>
    <%= render 'layouts/home_back_btn' %>
</div>